load("//tools/build:rules.bzl", "android_dynamic_library", "cc_copts", "cc_stripped_binary")

cc_library(
    name = "cc",
    srcs = [
        "cube.h",
        "frag.h",
        "icon.h",
        "main.cpp",
        "vert.h",
    ],
    copts = cc_copts(),
    linkopts = select({
        "//tools/build:linux": [
            "-ldl",
            "-lpthread",  # Needed to run on Swiftshader (Nov. 2019)
        ],
        "//tools/build:darwin": [],
        "//tools/build:windows": [],
        # Android
        "//conditions:default": [
            "-landroid",
            "-ldl",
            "-llog",
            "-lm",
            "-pthread",
        ],
    }),
    deps = [
        "@vulkan-headers//:vulkan",
    ] + select({
        "//tools/build:linux": [],
        "//tools/build:windows": [],
        "//tools/build:darwin": [],
        # Android
        "//conditions:default": [
            "@android_native_app_glue//:native_app_glue",
        ],
    }),
)

cc_stripped_binary(
    name = "vulkan_sample",
    copts = cc_copts(),
    visibility = ["//visibility:public"],
    deps = [":cc"],
)

android_dynamic_library(
    name = "libvulkan_sample",
    copts = cc_copts(),
    visibility = ["//visibility:public"],
    exports = "vulkan_sample.exports",
    deps = [":cc"],
)
