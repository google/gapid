  for(auto dev: devices) {
    DestroyDevice(dev);
  }

  {
    std::vector<VkPhysicalDevice> physicalDevices;
    auto physicalDeviceMap  = GetGlobalContext().GetVkPhysicalDeviceMap();
    for (auto it: *physicalDeviceMap) {
      if (it.second.instance == instance) {
