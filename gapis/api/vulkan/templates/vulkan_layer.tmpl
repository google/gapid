      }
    }
    for (auto it: physicalDevices) {
      physicalDeviceMap->erase(it);
    }
  }

  {
    delete GetGlobalContext().GetVkInstanceData(instance)->functions;
  }

  {
    auto instanceMap = GetGlobalContext().GetVkInstanceMap();
    instanceMap->erase(instance);
  }
}


