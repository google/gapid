  {{range $c := AllCommands $}}
    {{if (or (GetAnnotation $c "override") (not (GetAnnotation $c "synthetic")))}}
      {{$name := Macro "CmdName" $c}}
      VKAPI_ATTR {{Template "C++.ReturnType" $c}} VKAPI_CALL {{$name}}({{Template "C++.CallParameters" $c}});
    {{end}}
  {{end}}
  }
{{end}}

