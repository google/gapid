cmd void glFrontFace(GLenum orientation) {
  switch (orientation) {
    case GL_CCW, GL_CW: {
      // version 2.0
    }
    default: {
      glErrorInvalidEnum(orientation)
    }
  }

  ctx := GetContext()
  ctx.Rasterization.FrontFace = orientation
