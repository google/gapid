sub void GenVertexArrays(GLsizei count, VertexArrayId* arrays) {
  CheckCountGE!GLsizei(count, 0)
  ctx := GetContext()
  a := arrays[0:count]
  for i in (0 .. count) {
    id := as!VertexArrayId(?)
    assert(id != 0)
    ctx.Objects.GeneratedNames.VertexArrays[id] = true
    a[i] = id
  }
}

