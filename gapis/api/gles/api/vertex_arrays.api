sub void VertexAttribF(AttributeLocation location, Vec4f value) {
  ctx := GetContext()
  CheckAttributeLocation(location)
  vals := make!Vec4f(1)
  vals[0] = value
  ctx.Vertex.Attributes[location] = VertexAttributeValue(Value: as!u8[](vals))
}

