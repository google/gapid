load("@io_bazel_rules_go//proto:def.bzl", "go_proto_library")
load("@io_bazel_rules_go//go:def.bzl", "go_library")

proto_library(
    name = "severity_proto",
    srcs = ["severity.proto"],
    visibility = ["//visibility:public"],
)

go_proto_library(
    name = "severity_go_proto",
    importpath = "github.com/google/gapid/gapis/service/severity",
    proto = ":severity_proto",
    visibility = ["//visibility:public"],
)

go_library(
    name = "go_default_library",
    embed = [":severity_go_proto"],
    importpath = "github.com/google/gapid/gapis/service/severity",
    visibility = ["//visibility:public"],
)

cc_proto_library(
    name = "severity_cc_proto",
    visibility = ["//visibility:public"],
    deps = [":severity_proto"],
)
