@internal
class ImageFormat {
  // "Internal format" with explicit memory size. Includes compressed formats.
  // (RGB565, RGBA8, R16UI, DEPTH24_STENCIL8, COMPRESSED_SRGB8_ETC2, ...)
  GLenum SizedFormat

  // "Base format" which specifies just the channels. Includes the _INTEGER suffix.
  // This must be just the {R,G,B,A,D,S,INTEGER} part of the sized format above.
  // (RGB, RGBA, RED, DEPTH_STENCIL, RGB_INTEGER, ...)
  GLenum UnsizedFormat

  // Type of either one channel or the whole pixel. NONE for compressed formats.
  // This must be just the data type part of the sized format above (exactly).
  // For example, RGB565 must use UNSIGNED_SHORT_5_6_5, not UNSIGNED_BYTE.
  // (UNSIGNED_BYTE, FLOAT, UNSIGNED_SHORT_5_6_5...)
  GLenum DataType

  // True if the data is converted from sRGB to liner space by the sampler.
  // Note that GL does not care about colour spaces, and colour textures
  // will generally contain sRGB content even if this flag is off.
  // Thus, this flag just allows sRGB conscious developer to save a few
  // fragment shader instructions by doing the conversion in texture unit.
  bool SRGB

  // Information about the compression algorithm
  CompressionAlgorithm Compression
  u32                  BlockWidth
  u32                  BlockHeight
  u32                  BlockSize
}

@internal
enum CompressionAlgorithm {
  Uncompressed = 0,
  ETC1         = 1,
  ETC2         = 2,
  S3           = 3,
  ASTC         = 4,
  ATC          = 5,
  EAC          = 6,
}

sub u32 imageSize(u32 width, u32 height, GLenum format, GLenum ty) {
  ups := uncompressedPixelSize(format, ty)
  // TODO: Use format to find the info
  info := getSizedFormatInfo(ty)
  return switch info.Compression {
    case Uncompressed:
      width * height * ups
    default:
      ((width + (info.BlockWidth - 1)) / info.BlockWidth) *
      ((height + (info.BlockHeight - 1)) / info.BlockHeight) *
      info.BlockSize
  }
}

// uncompressedPixelSize returns the pixel data size in bytes for the given format and type.
sub u32 uncompressedPixelSize(GLenum format, GLenum ty) {
  num_components := componentCount(format)

  return switch ty {
    case GL_UNSIGNED_BYTE:                  num_components * 1
    case GL_BYTE:                           num_components * 1
    case GL_UNSIGNED_SHORT:                 num_components * 2
    case GL_SHORT:                          num_components * 2
    case GL_UNSIGNED_INT:                   num_components * 4
    case GL_INT:                            num_components * 4
    case GL_HALF_FLOAT:                     num_components * 2
    case GL_HALF_FLOAT_OES:                 num_components * 2
    case GL_FLOAT:                          num_components * 4
    case GL_UNSIGNED_SHORT_5_6_5:           2
    case GL_UNSIGNED_SHORT_4_4_4_4:         2
    case GL_UNSIGNED_SHORT_5_5_5_1:         2
    case GL_UNSIGNED_INT_2_10_10_10_REV:    4
    case GL_UNSIGNED_INT_10F_11F_11F_REV:   4
    case GL_UNSIGNED_INT_5_9_9_9_REV:       4
    case GL_UNSIGNED_INT_24_8:              4
    case GL_FLOAT_32_UNSIGNED_INT_24_8_REV: 8
    default:                                0 // TODO: What should we do in this case?
  }
}


// componentCount returns the number of components in the given format.
sub u32 componentCount(GLenum format) {
  return switch format {
    case GL_ALPHA:           1
    case GL_LUMINANCE:       1
    case GL_LUMINANCE_ALPHA: 2
    case GL_RED:             1
    case GL_RED_INTEGER:     1
    case GL_RG:              2
    case GL_RG_INTEGER:      2
    case GL_RGB:             3
    case GL_RGB_INTEGER:     3
    case GL_RGBA:            4
    case GL_RGBA_INTEGER:    4
    case GL_DEPTH_COMPONENT: 1
    case GL_DEPTH_STENCIL:   2
    case GL_STENCIL_INDEX:   1
    case GL_BGRA_EXT:        4
  }
}

sub ImageFormat getSizedFormatInfo(GLenum sf) {
  // Give the constant name for clarity
  sRGB := true
  linear := false
  return switch (sf) {
    // Uncompressed colour formats
    case GL_ALPHA8_EXT:     ImageFormat(sf, GL_ALPHA, GL_UNSIGNED_BYTE)
    case GL_R11F_G11F_B10F: ImageFormat(sf, GL_RGB, GL_UNSIGNED_INT_10F_11F_11F_REV)
    case GL_R16:            ImageFormat(sf, GL_RED, GL_UNSIGNED_SHORT)
    case GL_R16F:           ImageFormat(sf, GL_RED, GL_HALF_FLOAT)
    case GL_R16I:           ImageFormat(sf, GL_RED_INTEGER, GL_SHORT)
    case GL_R16UI:          ImageFormat(sf, GL_RED_INTEGER, GL_UNSIGNED_SHORT)
    case GL_R16_SNORM:      ImageFormat(sf, GL_RED, GL_SHORT)
    case GL_R32F:           ImageFormat(sf, GL_RED, GL_FLOAT)
    case GL_R32I:           ImageFormat(sf, GL_RED_INTEGER, GL_INT)
    case GL_R32UI:          ImageFormat(sf, GL_RED_INTEGER, GL_UNSIGNED_INT)
    case GL_R8:             ImageFormat(sf, GL_RED, GL_UNSIGNED_BYTE)
    case GL_R8I:            ImageFormat(sf, GL_RED_INTEGER, GL_BYTE)
    case GL_R8UI:           ImageFormat(sf, GL_RED_INTEGER, GL_UNSIGNED_BYTE)
    case GL_R8_SNORM:       ImageFormat(sf, GL_RED, GL_BYTE)
    case GL_RG16:           ImageFormat(sf, GL_RG, GL_UNSIGNED_SHORT)
    case GL_RG16F:          ImageFormat(sf, GL_RG, GL_HALF_FLOAT)
    case GL_RG16I:          ImageFormat(sf, GL_RG_INTEGER, GL_SHORT)
    case GL_RG16UI:         ImageFormat(sf, GL_RG_INTEGER, GL_UNSIGNED_SHORT)
    case GL_RG16_SNORM:     ImageFormat(sf, GL_RG, GL_SHORT)
    case GL_RG32F:          ImageFormat(sf, GL_RG, GL_FLOAT)
    case GL_RG32I:          ImageFormat(sf, GL_RG_INTEGER, GL_INT)
    case GL_RG32UI:         ImageFormat(sf, GL_RG_INTEGER, GL_UNSIGNED_INT)
    case GL_RG8:            ImageFormat(sf, GL_RG, GL_UNSIGNED_BYTE)
    case GL_RG8I:           ImageFormat(sf, GL_RG_INTEGER, GL_BYTE)
    case GL_RG8UI:          ImageFormat(sf, GL_RG_INTEGER, GL_UNSIGNED_BYTE)
    case GL_RG8_SNORM:      ImageFormat(sf, GL_RG, GL_BYTE)
    case GL_RGB10_A2:       ImageFormat(sf, GL_RGBA, GL_UNSIGNED_INT_2_10_10_10_REV)
    case GL_RGB10_A2UI:     ImageFormat(sf, GL_RGBA_INTEGER, GL_UNSIGNED_INT_2_10_10_10_REV)
    case GL_RGB16:          ImageFormat(sf, GL_RGB, GL_UNSIGNED_SHORT)
    case GL_RGB16F:         ImageFormat(sf, GL_RGB, GL_HALF_FLOAT)
    case GL_RGB16I:         ImageFormat(sf, GL_RGB_INTEGER, GL_SHORT)
    case GL_RGB16UI:        ImageFormat(sf, GL_RGB_INTEGER, GL_UNSIGNED_SHORT)
    case GL_RGB16_SNORM:    ImageFormat(sf, GL_RGB, GL_SHORT)
    case GL_RGB32F:         ImageFormat(sf, GL_RGB, GL_FLOAT)
    case GL_RGB32I:         ImageFormat(sf, GL_RGB_INTEGER, GL_INT)
    case GL_RGB32UI:        ImageFormat(sf, GL_RGB_INTEGER, GL_UNSIGNED_INT)
    case GL_RGB565:         ImageFormat(sf, GL_RGB, GL_UNSIGNED_SHORT_5_6_5)
    case GL_RGB5_A1:        ImageFormat(sf, GL_RGBA, GL_UNSIGNED_SHORT_5_5_5_1)
    case GL_RGB8:           ImageFormat(sf, GL_RGB, GL_UNSIGNED_BYTE)
    case GL_RGB8I:          ImageFormat(sf, GL_RGB_INTEGER, GL_BYTE)
    case GL_RGB8UI:         ImageFormat(sf, GL_RGB_INTEGER, GL_UNSIGNED_BYTE)
    case GL_RGB8_SNORM:     ImageFormat(sf, GL_RGB, GL_BYTE)
    case GL_RGB9_E5:        ImageFormat(sf, GL_RGB, GL_UNSIGNED_INT_5_9_9_9_REV)
    case GL_RGBA16:         ImageFormat(sf, GL_RGBA, GL_UNSIGNED_SHORT)
    case GL_RGBA16F:        ImageFormat(sf, GL_RGBA, GL_HALF_FLOAT)
    case GL_RGBA16I:        ImageFormat(sf, GL_RGBA_INTEGER, GL_SHORT)
    case GL_RGBA16UI:       ImageFormat(sf, GL_RGBA_INTEGER, GL_UNSIGNED_SHORT)
    case GL_RGBA16_SNORM:   ImageFormat(sf, GL_RGBA, GL_SHORT)
    case GL_RGBA32F:        ImageFormat(sf, GL_RGBA, GL_FLOAT)
    case GL_RGBA32I:        ImageFormat(sf, GL_RGBA_INTEGER, GL_INT)
    case GL_RGBA32UI:       ImageFormat(sf, GL_RGBA_INTEGER, GL_UNSIGNED_INT)
    case GL_RGBA4:          ImageFormat(sf, GL_RGBA, GL_UNSIGNED_SHORT_4_4_4_4)
    case GL_RGBA8:          ImageFormat(sf, GL_RGBA, GL_UNSIGNED_BYTE)
    case GL_RGBA8I:         ImageFormat(sf, GL_RGBA_INTEGER, GL_BYTE)
    case GL_RGBA8UI:        ImageFormat(sf, GL_RGBA_INTEGER, GL_UNSIGNED_BYTE)
    case GL_RGBA8_SNORM:    ImageFormat(sf, GL_RGBA, GL_BYTE)
    case GL_SRGB8:          ImageFormat(sf, GL_RGB, GL_UNSIGNED_BYTE, sRGB)
    case GL_SRGB8_ALPHA8:   ImageFormat(sf, GL_RGBA, GL_UNSIGNED_BYTE, sRGB)
    // Uncompressed depth/stencil formats
    case GL_DEPTH24_STENCIL8:   ImageFormat(sf, GL_DEPTH_STENCIL, GL_UNSIGNED_INT_24_8)
    case GL_DEPTH32F_STENCIL8:  ImageFormat(sf, GL_DEPTH_STENCIL, GL_FLOAT_32_UNSIGNED_INT_24_8_REV)
    case GL_DEPTH_COMPONENT16:  ImageFormat(sf, GL_DEPTH_COMPONENT, GL_UNSIGNED_SHORT)
    case GL_DEPTH_COMPONENT24:  ImageFormat(sf, GL_DEPTH_COMPONENT, GL_UNSIGNED_INT)
    case GL_DEPTH_COMPONENT32F: ImageFormat(sf, GL_DEPTH_COMPONENT, GL_FLOAT)
    case GL_STENCIL_INDEX8:     ImageFormat(sf, GL_STENCIL_INDEX, GL_UNSIGNED_BYTE)
    // Compressed formats
    // TODO: Return GL_NONE instead of 'sf' for the data type
    case GL_COMPRESSED_R11_EAC:                        ImageFormat(sf, GL_RED, sf, linear, EAC, 4, 4, 8)
    case GL_COMPRESSED_RG11_EAC:                       ImageFormat(sf, GL_RG, sf, linear, EAC, 4, 4, 16)
    case GL_COMPRESSED_RGB8_ETC2:                      ImageFormat(sf, GL_RGB, sf, linear, ETC2, 4, 4, 8)
    case GL_COMPRESSED_RGB8_PUNCHTHROUGH_ALPHA1_ETC2:  ImageFormat(sf, GL_RGBA, sf, linear, ETC2, 4, 4, 8)
    case GL_COMPRESSED_RGBA8_ETC2_EAC:                 ImageFormat(sf, GL_RGBA, sf, linear, ETC2, 4, 4, 16)
    case GL_COMPRESSED_RGBA_ASTC_10x10:                ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 10, 10, 16)
    case GL_COMPRESSED_RGBA_ASTC_10x5:                 ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 10, 5, 16)
    case GL_COMPRESSED_RGBA_ASTC_10x6:                 ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 10, 6, 16)
    case GL_COMPRESSED_RGBA_ASTC_10x8:                 ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 10, 8, 16)
    case GL_COMPRESSED_RGBA_ASTC_12x10:                ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 12, 10, 16)
    case GL_COMPRESSED_RGBA_ASTC_12x12:                ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 12, 12, 16)
    case GL_COMPRESSED_RGBA_ASTC_4x4:                  ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 4, 4, 16)
    case GL_COMPRESSED_RGBA_ASTC_5x4:                  ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 5, 4, 16)
    case GL_COMPRESSED_RGBA_ASTC_5x5:                  ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 5, 5, 16)
    case GL_COMPRESSED_RGBA_ASTC_6x5:                  ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 6, 5, 16)
    case GL_COMPRESSED_RGBA_ASTC_6x6:                  ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 6, 6, 16)
    case GL_COMPRESSED_RGBA_ASTC_8x5:                  ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 8, 5, 16)
    case GL_COMPRESSED_RGBA_ASTC_8x6:                  ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 8, 6, 16)
    case GL_COMPRESSED_RGBA_ASTC_8x8:                  ImageFormat(sf, GL_RGBA, sf, linear, ASTC, 8, 8, 16)
    case GL_COMPRESSED_SIGNED_R11_EAC:                 ImageFormat(sf, GL_RED, sf, linear, EAC, 4, 4, 8)
    case GL_COMPRESSED_SIGNED_RG11_EAC:                ImageFormat(sf, GL_RG, sf, linear, EAC, 4, 4, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_10x10:        ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 10, 10, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_10x5:         ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 10, 5, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_10x6:         ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 10, 6, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_10x8:         ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 10, 8, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_12x10:        ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 12, 10, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_12x12:        ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 12, 12, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_4x4:          ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 4, 4, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_5x4:          ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 5, 4, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_5x5:          ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 5, 5, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_6x5:          ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 6, 5, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_6x6:          ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 6, 6, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_8x5:          ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 8, 5, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_8x6:          ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 8, 6, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ASTC_8x8:          ImageFormat(sf, GL_RGBA, sf, sRGB, ASTC, 8, 8, 16)
    case GL_COMPRESSED_SRGB8_ALPHA8_ETC2_EAC:          ImageFormat(sf, GL_RGBA, sf, sRGB, ETC2, 4, 4, 16)
    case GL_COMPRESSED_SRGB8_ETC2:                     ImageFormat(sf, GL_RGB, sf, sRGB, ETC2, 4, 4, 8)
    case GL_COMPRESSED_SRGB8_PUNCHTHROUGH_ALPHA1_ETC2: ImageFormat(sf, GL_RGBA, sf, sRGB, ETC2, 4, 4, 8)
    case GL_ETC1_RGB8_OES:                             ImageFormat(sf, GL_RGB, sf, linear, ETC1, 4, 4, 8)
    default:
      // TODO: We should not be passing on 'sf' as unsized format
      ImageFormat(sf, sf, sf)
  }
}
