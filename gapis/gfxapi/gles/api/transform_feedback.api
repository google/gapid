@internal
class TransformFeedback {
  // Table 21.35: Transform Feedback State
  map!(GLuint, BufferBinding) Buffers
  GLboolean                   Paused  = GL_FALSE
  GLboolean                   Active  = GL_FALSE
  @unused string              Label
}

sub ref!TransformFeedback GetBoundTransformFeedback() {
  ctx := GetContext()
  return ctx.Objects.TransformFeedbacks[ctx.BoundTransformFeedback]
}

@doc("https://www.khronos.org/opengles/sdk/docs/man3/html/glBeginTransformFeedback.xhtml", GLES30)
@doc("https://www.khronos.org/opengles/sdk/docs/man31/html/glBeginTransformFeedback.xhtml", GLES31)
@doc("https://www.khronos.org/opengles/sdk/docs/man32/html/glBeginTransformFeedback.xhtml", GLES32)
cmd void glBeginTransformFeedback(GLenum primitiveMode) {
  minRequiredVersion(3, 0)
  switch (primitiveMode) {
    case GL_LINES, GL_POINTS, GL_TRIANGLES: {
      // version 3.0
    }
    default: {
      glErrorInvalidEnum(primitiveMode)
    }
  }
  GetBoundTransformFeedback().Active = 1
}

@doc("https://www.khronos.org/opengles/sdk/docs/man3/html/glBindTransformFeedback.xhtml", GLES30)
@doc("https://www.khronos.org/opengles/sdk/docs/man31/html/glBindTransformFeedback.xhtml", GLES31)
@doc("https://www.khronos.org/opengles/sdk/docs/man32/html/glBindTransformFeedback.xhtml", GLES32)
cmd void glBindTransformFeedback(GLenum target, TransformFeedbackId id) {
  minRequiredVersion(3, 0)
  switch (target) {
    case GL_TRANSFORM_FEEDBACK: {
      // version 3.0
    }
    default: {
      glErrorInvalidEnum(target)
    }
  }
  ctx := GetContext()
  if !(id in ctx.Objects.TransformFeedbacks) {
    ctx.Objects.TransformFeedbacks[id] = new!TransformFeedback()
  }
  ctx.BoundTransformFeedback = id
}

@doc("https://www.khronos.org/opengles/sdk/docs/man3/html/glDeleteTransformFeedbacks.xhtml", GLES30)
@doc("https://www.khronos.org/opengles/sdk/docs/man31/html/glDeleteTransformFeedbacks.xhtml", GLES31)
@doc("https://www.khronos.org/opengles/sdk/docs/man32/html/glDeleteTransformFeedbacks.xhtml", GLES32)
cmd void glDeleteTransformFeedbacks(GLsizei n, const TransformFeedbackId* ids) {
  minRequiredVersion(3, 0)
  tfs := ids[0:n]
  ctx := GetContext()
  for i in (0 .. n) {
    id := tfs[i]
    if id != 0 {
      ctx.Objects.TransformFeedbacks[id] = null
    }
  }
}

@doc("https://www.khronos.org/opengles/sdk/docs/man3/html/glBeginTransformFeedback.xhtml", GLES30)
@doc("https://www.khronos.org/opengles/sdk/docs/man31/html/glBeginTransformFeedback.xhtml", GLES31)
@doc("https://www.khronos.org/opengles/sdk/docs/man32/html/glBeginTransformFeedback.xhtml", GLES32)
cmd void glEndTransformFeedback() {
  minRequiredVersion(3, 0)
  GetBoundTransformFeedback().Paused = 0
  GetBoundTransformFeedback().Active = 0
}

@doc("https://www.khronos.org/opengles/sdk/docs/man3/html/glGenTransformFeedbacks.xhtml", GLES30)
@doc("https://www.khronos.org/opengles/sdk/docs/man31/html/glGenTransformFeedbacks.xhtml", GLES31)
@doc("https://www.khronos.org/opengles/sdk/docs/man32/html/glGenTransformFeedbacks.xhtml", GLES32)
cmd void glGenTransformFeedbacks(GLsizei n, TransformFeedbackId* ids) {
  minRequiredVersion(3, 0)
  tfs := ids[0:n]
  ctx := GetContext()
  for i in (0 .. n) {
    id := as!TransformFeedbackId(?)
    ctx.Objects.TransformFeedbacks[id] = new!TransformFeedback()
    tfs[i] = id
  }
}

