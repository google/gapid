@doc("https://www.khronos.org/opengles/sdk/docs/man3/html/glIsTransformFeedback.xhtml", GLES30)
@doc("https://www.khronos.org/opengles/sdk/docs/man31/html/glIsTransformFeedback.xhtml", GLES31)
@doc("https://www.khronos.org/opengles/sdk/docs/man32/html/glIsTransformFeedback.xhtml", GLES32)
cmd GLboolean glIsTransformFeedback(TransformFeedbackId id) {
  minRequiredVersion(3, 0)
  ctx := GetContext()
  return as!GLboolean(id in ctx.Objects.TransformFeedbacks)
}

@doc("https://www.khronos.org/opengles/sdk/docs/man3/html/glPauseTransformFeedback.xhtml", GLES30)
@doc("https://www.khronos.org/opengles/sdk/docs/man31/html/glPauseTransformFeedback.xhtml", GLES31)
@doc("https://www.khronos.org/opengles/sdk/docs/man32/html/glPauseTransformFeedback.xhtml", GLES32)
cmd void glPauseTransformFeedback() {
  minRequiredVersion(3, 0)
  GetBoundTransformFeedback().Paused = 1
}

@doc("https://www.khronos.org/opengles/sdk/docs/man3/html/glResumeTransformFeedback.xhtml", GLES30)
@doc("https://www.khronos.org/opengles/sdk/docs/man31/html/glResumeTransformFeedback.xhtml", GLES31)
@doc("https://www.khronos.org/opengles/sdk/docs/man32/html/glResumeTransformFeedback.xhtml", GLES32)
cmd void glResumeTransformFeedback() {
  minRequiredVersion(3, 0)
  GetBoundTransformFeedback().Paused = 0
}

