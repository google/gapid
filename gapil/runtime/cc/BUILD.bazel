load("//tools/build:rules.bzl", "cc_copts")

cc_library(
    name = "headers",
    hdrs = glob(["*.h"]),
    copts = cc_copts(),
    visibility = ["//visibility:public"],
)

cc_library(
    name = "cc",
    srcs = [
        "runtime.cpp",
        "string.cpp",
    ],
    hdrs = glob(["*.inc"]),
    copts = cc_copts(),
    visibility = ["//visibility:public"],
    deps = [
        ":headers",
        "//core/memory/arena/cc",
    ],
)

cc_library(
    name = "tracking_arena",
    srcs = [
        "runtime.cpp",
        "string.cpp",
    ],
    hdrs = glob(["*.inc"]),
    copts = cc_copts(),
    visibility = ["//visibility:public"],
    deps = [
        ":headers",
        "//core/memory/arena/cc:tracking_arena",
    ],
)

cc_test(
    name = "tests",
    size = "small",
    srcs = [
        "map_test.cpp",
        "ref_test.cpp",
        "slice_test.cpp",
        "string_test.cpp",
    ],
    copts = cc_copts(),
    linkopts = select({
        "//tools/build:linux": ["-ldl"], # TODO: Move this to the gtest rules.
        "//conditions:default": [],
    }),
    deps = [
        ":tracking_arena",
        "@gtest//:gtest_main",
    ]
)