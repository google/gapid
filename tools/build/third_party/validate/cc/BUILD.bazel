load("//tools/build:rules.bzl", "android_dynamic_library", "cc_copts")

cc_library(
    name = "cc",
    srcs = glob(["*.cpp"]),
    hdrs = glob(["*.h"]),
    copts = cc_copts() + select({
        # Android
        "//conditions:default": ["-DVK_USE_PLATFORM_ANDROID_KHR"],
    }) + [
        "-std=c++17",
        "-fno-rtti",
        "-fno-exceptions",
        "-DNDEBUG",  # always ndebug for perfetto
    ],
    linkopts = select({
        "//tools/build:linux": ["-lpthread"],
        # Android
        "//conditions:default": [
            "-landroid",
            "-ldl",
            "-lm",
            "-llog",
            "-lvulkan",
        ],
    }),
    visibility = ["//visibility:public"],
    deps = [
        "//core/vulkan/cc/include/vulkan",
        "@android_native_app_glue//:native_app_glue",
    ],
)

android_dynamic_library(
    name = "libVKCube_android",
    visibility = ["//visibility:public"],
    exports = "vk_cube_android.exports",
    deps = [":cc"],
)
