namespace {{(Global "Vulkan.LayerNamespace")}} {

struct timer {
    timer(const char* category, const char* name):
        cat(category) {
        Emit().StartEvent(category, name);
    }
    ~timer() {
        Emit().EndEvent(cat);
    }
    const char* cat;
};

