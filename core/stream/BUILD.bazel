    visibility = ["//visibility:public"],
)

java_proto_library(
    name = "stream_java_proto",
    visibility = ["//visibility:public"],
    deps = [":stream_proto"],
)

go_test(
    name = "go_default_test",
    size = "small",
    srcs = ["convert_test.go"],
