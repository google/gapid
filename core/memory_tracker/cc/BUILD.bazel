load("//tools/build:rules.bzl", "cc_copts")

cc_library(
    name = "cc",
    srcs = glob(
        [
            "*.cpp",
        ],
        exclude = [
            "*_test.cpp",
        ],
    ) + select({
        "//tools/build:windows": glob([
            "windows/*.h",
            "windows/*.inc",
            "windows/*.cpp",
        ]),
        "//conditions:default": glob([
            "posix/*.h",
            "posix/*.inc",
        ]),
    }),
    hdrs = glob(["*.h"]),
    copts = cc_copts(),
    visibility = ["//visibility:public"],
    deps = [
        "//core/cc",
        "//core/memory/arena/cc",
    ],
)

cc_test(
    name = "tests",
    size = "small",
    srcs = [
        "memory_tracker_test.cpp",
    ],
    copts = cc_copts(),
    deps = [
        ":cc",
        "@com_google_googletest//:gtest_main",
    ],
)
