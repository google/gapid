go_test(
    name = "go_default_test",
    size = "small",
    srcs = [
        "boolean_test.go",
        "enum_test.go",
        "error_test.go",
        "float_test.go",
        "integer_test.go",
        "manager_test.go",
        "map_test.go",
        "slice_test.go",
        "string_test.go",
        "time_test.go",
        "value_test.go",
    ],
    embed = [":go_default_library"],
